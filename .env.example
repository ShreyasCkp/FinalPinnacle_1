# Django Core Settings
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
DJANGO_ENV=local

# Site Configuration
SITE_URL=http://localhost:8000
CSRF_TRUSTED_ORIGINS=http://localhost:8000,https://your-azure-app.azurewebsites.net

# Database Configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Email Provider Configuration (Optional - for Postmark/SendGrid)
EMAIL_PROVIDER_NAME=smtp
# For Postmark:
# POSTMARK_API_TOKEN=your-postmark-api-token
# POSTMARK_FROM_EMAIL=noreply@yourdomain.com
# For SendGrid:
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# MsgKart SMS Configuration
MSGKART_API_KEY=your-msgkart-api-key
MSGKART_EMAIL=your-msgkart-email
MSGKART_PHONE_ID=your-msgkart-phone-id
MSGKART_ACCOUNT_ID=your-msgkart-account-id
MSGKART_BASE_URL=https://api.msgkart.com

# Timezone
TIME_ZONE=Asia/Kolkata
